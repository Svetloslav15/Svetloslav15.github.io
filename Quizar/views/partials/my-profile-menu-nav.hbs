            <i class="fas fa-user-circle h1 ml-3"></i>
            <div class="ml-3">
                <p>{{firstname}} {{lastname}}</p>
                <p>{{points}} XP</p>
            </div>
        </div>
        <hr class="text-center bg-white mb-4">
        <ul class="navbar-nav">
            <li class="nav-item row mx-2 mb-3">
                <i class="fas fa-info mr-3 icon mt-1"></i>
                <a href="#" class="nav-link text-white menu-profile-link">Обща информация</a>
