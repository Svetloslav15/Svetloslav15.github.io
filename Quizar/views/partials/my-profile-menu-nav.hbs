                    <a href="#" class="nav-link text-white menu-profile-link">Добави въпрос</a>
                </li>
            {{/if}}
            {{#if isAdmin}}
                <li class="nav-item row mx-2 mb-3">
                    <i class="fas fa-unlock mr-3 icon mt-1"></i>
                    <a href="#" class="nav-link text-white menu-profile-link">Администрация</a>
                </li>
            {{/if}}
            <li class="nav-item row mx-2 mb-3">
                <i class="fas fa-sign-out-alt mr-3 icon mt-1"></i>
                <a href="#" class="nav-link text-white menu-profile-link">Излезни</a>
            </li>
            <li class="nav-item m-auto">
                <i class="fas fa-arrow-circle-up menu-profile-link" id="menu-arrow-collapse"></i>
            </li>
