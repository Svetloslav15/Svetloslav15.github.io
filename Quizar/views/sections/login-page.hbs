<section class="jumbotron bg-light mt-5 rounded mx-auto border w-85" id="login-section">
    <h2 class="h2 text-center mb-3">Login</h2>
    <div class="mx-auto text-center">
        <form class="text-center" method="post" action="#/login">
            <div class="form-group col-md-3 m-md-auto demo">
                <label for="exampleInputUsername">Username:</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-user text-white"></i></div>
                    <input type="text" class="form-control" name="username" id="exampleInputUsername" placeholder="Username...">
                </div>
            </div>
            <div class="form-group col-md-3 mx-md-auto mt-4">
                <label for="exampleInputPassword1">Password:</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-lock text-white"></i></div>
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password...">
                </div>
            </div>
            <div class="d-block mt-4">
                <input type="submit" class="btn btn-outline-info p-md-3 ml-5 mt-2 m-auto text-uppercase h5 submit" value="Submit">
            </div>
        </form>
    </div>
    <div>
        <p class="text-center mt-4 h7">Don't have an account? <a href="#" class="btn btn-info p-1 ml-2 h6">Sign Up</a></p>
    </div>
</section>